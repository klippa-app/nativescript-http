{
	"compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmitHelpers": true,
		"noEmitOnError": true,
		"skipLibCheck": true,
    "lib": ["es6", "dom"],
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"src/*"
			],
			"*": [
				"./node_modules/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"platforms",
		"../src/node_modules"
	],
	"files": [
	  "./references.d.ts"
	],	
	"include": [
		"../src",
		"**/*"
	]
}
